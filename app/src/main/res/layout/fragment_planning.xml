<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.tab_planning.PlanningFragment">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/planning_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/fragment_planning_scene">

        <TextView
            android:id="@+id/planning_current_day_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/planning_calendar_button_group"
            app:layout_constraintEnd_toStartOf="@id/planning_calendar_button_group"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/planning_calendar_button_group"
            tools:text="Mardi 23 Mai" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/planning_calendar_button_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:checkedButton="@id/planning_week_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/planning_week_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semaine" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/planning_month_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mois" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/planning_actionbar_delete"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/planning_days_dates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="16"
            tools:listitem="@layout/holder_week_date" />

        <CalendarView
            android:id="@+id/planning_days_calendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/planning_calendar_button_group" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/planning_calendar_flipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="planning_days_dates,planning_days_calendar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/days_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/planning_gradient_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/planning_calendar_flipper" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/day_meals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:paddingBottom="80dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/days_line"
            tools:itemCount="1"
            tools:listitem="@layout/holder_day_meal" />

        <TextView
            android:id="@+id/day_meals_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_no_meals_label"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/days_line" />

        <ProgressBar
            android:id="@+id/day_meals_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/day_meals"
            app:layout_constraintStart_toStartOf="@id/day_meals"
            app:layout_constraintTop_toTopOf="@id/day_meals" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/planning_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/planning_add_meal_title"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/orange"
            app:icon="@drawable/ic_round_add_24"
            app:iconTint="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.motion.widget.MotionLayout>

</layout>
