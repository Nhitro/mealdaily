<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.tab_planning.PlanningFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/planning_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/planning_current_day_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:textSize="19sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@id/planning_calendar_flipper"
            app:layout_constraintEnd_toStartOf="@id/planning_calendar_button_group"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Mardi 23 Mai" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/planning_calendar_button_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:checkedButton="@id/planning_week_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/planning_week_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semaine" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/planning_month_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mois" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <ViewFlipper
            android:id="@+id/planning_calendar_flipper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:measureAllChildren="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/planning_calendar_button_group">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/planning_days_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:itemCount="16"
                tools:listitem="@layout/holder_week_date" />

            <CalendarView
                android:id="@+id/planning_days_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </ViewFlipper>

        <View
            app:layout_constraintTop_toBottomOf="@id/planning_calendar_flipper"
            app:layout_constraintStart_toStartOf="@id/planning_calendar_flipper"
            app:layout_constraintEnd_toEndOf="@id/planning_calendar_flipper"
            android:background="@drawable/planning_gradient_background"
            android:id="@+id/days_line"
            android:layout_width="0dp"
            android:layout_height="1dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/day_meals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/planning_calendar_flipper"
            tools:listitem="@layout/holder_day_meal" />

        <ProgressBar
            android:id="@+id/day_meals_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/day_meals"
            app:layout_constraintStart_toStartOf="@id/day_meals"
            app:layout_constraintTop_toTopOf="@id/day_meals" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
